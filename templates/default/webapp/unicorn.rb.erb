# Set the working application directory
# working_directory "/path/to/your/app"
working_directory "<%= node.app.dir %>/app"

# Unicorn PID file location
# pid "/path/to/pids/unicorn.pid"
pid "<%= node.app.dir %>/pids/unicorn.pid"

# Path to logs
# stderr_path "/path/to/logs/unicorn.log"
# stdout_path "/path/to/logs/unicorn.log"
stderr_path "<%= node.app.dir %>/logs/unicorn.log"
stdout_path "<%= node.app.dir %>/logs/unicorn.log"

# Unicorn socket
listen "/tmp/unicorn.<%= node.app.name %>.sock"

# Number of processes
# worker_processes 4
worker_processes 2

# Time-out
timeout 30
